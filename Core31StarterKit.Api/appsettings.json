{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": { "path": "c:/logs/log.txt" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Filter": [
      "...",
      { //Hp --> Logic: Filters all health check logs which are healthy
        "Name": "ByExcluding",
        "Args": {
          "expression": "EndsWith(RequestPath, '/healthcheck') and StatusCode=200"
        }
      }
    ]
  },

  "AllowedHosts": "*",

  "AppSettings": {
    "ApplicationName": "Core31StarterKit"
  },
  "HealthCheckSettings": {
    "HealthChecksUIPath": "/healthcheck-ui",
    "HealthChecksApiPath": "/healthcheck"
  }

}
